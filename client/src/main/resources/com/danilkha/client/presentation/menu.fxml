<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.danilkha.client.presentation.menu.MenuController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" prefWidth="100" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="90.0" prefHeight="100.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <Label fx:id="welcomeText" text="Доступные лобби" />
   <Button fx:id="btnNewLobby" onAction="#onNewLobbyClicked" mnemonicParsing="false" text="Создать игру" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
   <ListView fx:id="listLobbies" GridPane.columnSpan="2" GridPane.rowIndex="1" />

</GridPane>
